{
  "name": "@lithium-apps/adonis-graphql",
  "description": "Create GraphQL APIs with your Adonis Application.",
  "version": "0.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./services/main": "./build/services/main.js",
    "./graphql_provider": "./build/providers/graphql_provider.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 pnpm run quick:test",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "pnpm run copy:templates",
    "release": "np",
    "version": "pnpm run build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "graphql",
    "gql",
    "api",
    "apollo",
    "typescript"
  ],
  "author": "Kylian Mallet <kylian.mallet@sklav.group>",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "glob": "^11.0.3",
    "graphql-ws": "^6.0.6",
    "pkg-types": "^2.3.0",
    "type-graphql": "2.0.0-rc.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.12.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^3.0.0",
    "@japa/file-system": "^2.3.2",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.6.3",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.14.5",
    "@types/ws": "^8.18.1",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "graphql-scalars": "^1.24.2",
    "np": "^10.0.6",
    "ts-node-maintained": "^10.9.4",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^21.2.0",
    "@vinejs/vine": "^3.0.1",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.24.2",
    "luxon": "^3.5.0"
  },
  "optionalDependencies": {
    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/bouncer": "^3.1.6"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
